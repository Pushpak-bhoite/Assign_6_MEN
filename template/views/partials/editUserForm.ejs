<form method="post" action="/editUser/<%= data._id %>?_method=PATCH" class="ms-2 bg-dark text-white">

    <div class="modal-body">
        <div class="mb-3">
            <input name="ffname" type="text" class="form-control reg-form bg-dark text-white" value="<%= data.ffname %>" id="fname">
        </div>
        <div class="mb-3">
            <input name="flname" type="text" class="form-control reg-form bg-dark text-white" value="<%= data.flname %>" id="lname">
        </div>
        <div class="mb-3">
            <input name="fphone" type="tel" class="form-control reg-form bg-dark text-white" id="exampleInputEmail1" value="<%= data.fphone %>">
        </div>
        <div class="mb-3">
            <label class="form-label text-dark">Gender</label>
            <input class="form-check-input text-dark" type="radio" name="fgender" id="male" value="male" <%= data.fgender === 'male' ? 'checked' : '' %>>
            <label class="form-check-label text-dark" for="male">Male</label>
            <input class="form-check-input text-dark" type="radio" name="fgender" id="female" value="female" <%= data.fgender === 'female' ? 'checked' : '' %>>
            <label class="form-check-label text-dark" for="female">Female</label>
        </div>
        <div class="mb-3">
            <input name="fmail" type="email" class="form-control reg-form bg-dark text-white" id="exampleInputEmail1" value="<%= data.fmail %>">
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <input type="hidden" name="_method" value="PATCH">
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>

</form>
